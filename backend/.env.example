# Application Settings
ENVIRONMENT=development
DEBUG=True

# API Keys - OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# API Keys - Voice AI
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# API Keys - HuggingFace (optional)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Google APIs (optional - use mocks if not available)
GOOGLE_CALENDAR_CREDENTIALS=path_to_credentials.json
GMAIL_CREDENTIALS=path_to_gmail_credentials.json

# Third-party Integrations (optional)
NOTION_API_KEY=your_notion_api_key_here
TODOIST_API_KEY=your_todoist_api_key_here

# Database Paths
VECTOR_DB_PATH=./data/vector_db
SQLITE_DB_PATH=./data/servibot.db
UPLOAD_DIR=./data/uploads

# Upload Settings
MAX_UPLOAD_SIZE=10485760

# CORS Origins (preferred: comma-separated)
# Examples:
# Comma-separated (recommended):
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# Or JSON array (also supported):
# CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# RAG Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# Agent Settings
MAX_ITERATIONS=10
AGENT_TIMEOUT=300
